@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

 <div class="container-scroller mt-0">
      <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
          <div class="row w-100 mx-0">
            <div class="col-lg-4 mx-auto">
              <div class="auth-form-light text-left py-5 px-4 px-sm-5">
               <center>
                    <h4><strong>Batch Status Monitoring System</strong></h4>                   
                    <h6 class="font-weight-light">Forgot password.</h6>
                </center>
               
                
               
                  <form id="account" method="post" class="pt-3">
                     <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>          
                  <div class="form-group">
                  <input asp-for="Input.Email" type="Email"  class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">
                  <span asp-validation-for ="Input.Email" class="text-danger"></span>
               </div>
                
                  <div class="mt-3 d-grid gap-2">
                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" >Reset Password</button>
                  </div>
                
                  
                </form>
              </div>
            </div>
          </div>
        </div>
        <!-- content-wrapper ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
