@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

 <div class="container-scroller">
      <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
          <div class="row w-100 mx-0">
            <div class="col-lg-4 mx-auto">
              <div class="auth-form-light text-left py-5 px-4 px-sm-5">
               <center>
                    <h4><strong>Batch Status Monitoring System</strong></h4>
                   
                    <h6 class="font-weight-light">Sign in to continue.</h6>
                </center>
               
                
               
                  <form id="account" method="post" class="pt-3">
                     <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>          
                
                  <div class="form-group">
                  <input asp-for="Input.Id"   class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">
                  <span asp-validation-for ="Input.Id" class="text-danger"></span>
               </div>
                  <div class="form-group">
                 <input asp-for="Input.Password" type="password"  class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">
                  <span asp-validation-for="Input.Password" class="text-danger"></span>
                  </div>
                  <div class="mt-3 d-grid gap-2">
                    <button id="login-submit" type="submit" class="btn btn-primary btn-block">Sign In</button>
                 </div>
                 
                 
                 
                </form>
              </div>
            </div>
          </div>
        </div>
        <!-- content-wrapper ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
