@using BatchMonitoringSystem.ViewModels
@model BatchDto

@{
    ViewData["Title"] = "Create Batch";
}

<h1>Create Batch</h1>

<form asp-action="CreateBatch" method="post">
    <div class="form-group">
        <label asp-for="EquipmentId"></label>
        <select asp-for="EquipmentId" asp-items="@ViewBag.EquipmentList" class="form-control"></select>
        <span asp-validation-for="EquipmentId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProductId"></label>
        <select asp-for="ProductId" asp-items="@ViewBag.ProductList" class="form-control"></select>
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BatchName"> Batch Name</label>
        <input asp-for="BatchName"  class="form-control" />
        <span asp-validation-for="BatchName" class="text-danger"> </span>
    </div>
    <div class="form-group">
        <label asp-for="BatchStartTime"></label>
        <input asp-for="BatchStartTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="BatchStartTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BatchEndTime"></label>
        <input asp-for="BatchEndTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="BatchEndTime" class="text-danger" > </span>
    </div>

    <br /><br />
    <button type="submit" class="btn btn-success">Save Batch</button>
</form>

