@model BatchMonitoringSystem.Models.Permission

@{
    ViewData["Title"] = "Edit Permission";
}

<h1>Edit Permission</h1>

<h4>Permission</h4>
<hr />
<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="PermissionName" class="control-label"></label>
        <input asp-for="PermissionName" class="form-control" />
        <span asp-validation-for="PermissionName" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="PermissionId" />
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
