@model IEnumerable<BatchMonitoringSystem.Models.Permission>

@{
    ViewData["Title"] = "Permition";
}

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Permission Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.PermissionName
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PermissionId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PermissionId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PermissionId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
