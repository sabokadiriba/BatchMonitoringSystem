@using BatchMonitoringSystem.Controllers
@model BackupRequest

<div class="container mt-5">
    <h2>Backup Report</h2>
    <form asp-action="Backup" method="post">
        <div class="form-group">
            <label for="equipmentId">Equipment ID:</label>
            <input type="number" id="equipmentId" name="EquipmentId" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="sourcePath">Source Path:</label>
            <input type="text" id="sourcePath" name="SourcePath" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="localDestinationPath">Local Destination Path:</label>
            <input type="text" id="localDestinationPath" name="LocalDestinationPath" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="remoteDestinationPath">Remote Destination Path:</label>
            <input type="text" id="remoteDestinationPath" name="RemoteDestinationPath" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary">Backup</button>
    </form>
</div>
